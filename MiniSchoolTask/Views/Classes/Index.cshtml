@model IEnumerable<MiniSchoolTask.Models.Class>

@{
    ViewBag.Title = "Classes List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Classes</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Class</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Class Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClassName</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ClassId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.ClassId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
